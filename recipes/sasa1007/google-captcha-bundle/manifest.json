{
    "bundles": [
        {
            "name": "BeckUp\\GoogleCaptchaBundle\\GoogleCaptchaBundle",
            "envs": ["all"]
        }
    ],
    "copy-from-recipe": {
        "config/": "%CONFIG_DIR%/"
    },
    "env": {
        "GOOGLE_CAPTCHA_SECRET": "your_google_recaptcha_secret_key"
    },
    "post-install-output": [
        "",
        "Google Captcha Bundle has been installed!",
        "",
        "Next steps:",
        "1. Replace 'your_google_recaptcha_secret_key' in .env with your actual secret key",
        "2. Add the reCAPTCHA widget to your templates",
        "3. Use GoogleCaptchaService in your controllers",
        "",
        "Documentation: https://github.com/sasa1007/googleCaptchaBundle"
    ]
} 